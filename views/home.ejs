<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>
        body{
            background-color: #f1f1f1;
            text-align: center;
            font-family: Arial, sans-serif;
        }
        table,td,th{
            margin: auto;
            width: 70%;
            border: 1px solid #000;
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <h1 >URL SHORTNER</h1>
    <% if (locals.id) { %>
     <p>URL Generated: <a target="_blank" href="http://localhost:8001/url/<%= id %>">http://localhost:8001/url/<%= id %></a></p>
    <% } %>
    <div>
        <form action="/url" method="post">
            <label for="url">Enter Your original URL</label>
            <input type="text" name="url" id="url" placeholder="https://www.example.com" required>
            <button type="submit">Shorten</button>
        </form>
    </div>
    <br>
    <div class="url_clicks_table">
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>S. No.</th>
                    <th>Short ID</th>
                    <th>Short Link</th>
                    <th>Redirect Link</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                     <tr>
                        <td><%= index+1 %> </td>
                        <td><%= url.shortID %></td>
                        <td><a target="_blank" href="http://localhost:8001/url/<%= url.shortID %>">http://localhost:8001/url/<%= url.shortID %></a></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visitHistory.length %> </td>
                     </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>